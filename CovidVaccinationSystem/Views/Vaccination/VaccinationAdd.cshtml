            </div>
            <div class="form-group">
                <label asp-for="Vacc_2_ScheduleDate" class="control-label"></label>
                <input asp-for="Vacc_2_ScheduleDate" class="form-control" />
                <span asp-validation-for="Vacc_2_ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vacc_2_LotNo" class="control-label"></label>
                <input asp-for="Vacc_2_LotNo" class="form-control" />
                <span asp-validation-for="Vacc_2_LotNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Pat_Id" />
                <input type="hidden" asp-for="Vacc_Id" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="VaccinationHistory">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
